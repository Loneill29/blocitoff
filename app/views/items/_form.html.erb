<div id="new-item-form" >
  <%= form_for [@user, @item], remote: true do |f| %>
    <div id ="input" class="form-group">
      <% f.label :name %>
      <%= f.text_area :name, class: 'form-control', placeholder: "Enter new item" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-lg btn-default' %>
    </div>
  <% end %>
</div>
