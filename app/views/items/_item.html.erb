<div class="row" id="items"%>
  <h4>My To-Do Items</h4>
    <div class="col-md-8">
        <% @items.each do |item| %>
          <ul>
            <li>
              <%="#{item.name}"%>
              <%= link_to "", [item.user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
            </li>
          </ul>
          <div>
            <%= distance_of_time_in_words(Time.now, item.created_at.to_date + 7 ) %> left to complete!
          </div>
        <% end %>
    </div>
</div>
